- content_for :backtrack do
  %li= link_to raw("#{icon_for('link', Link.model_name.human(:count => :plural))} &rang;"), links_path
  %li.active= link_to @link.title, @link
  %li= link_to raw(action_icon(:edit)), edit_link_path if can? :edit, @link

- content_for :top_right_menu do
  %li= link_to raw(action_icon(:add, t('phrase.add_resource', :resource => Link.model_name.human(:count => :plural)))), new_link_path

.row-fluid
  .span6
    %blockquote
      %p= @link.description
      %small Contributed by #{link_to @link.user.name, @link.user}.
  .span6.right
    %h1 Visit #{link_to @link.title, @link.url, :target => '_blank'}.
.row-fluid
  .span12
    %iframe{:src => @link.url, :style => 'width:100%;height:800px;', :seamless => 'seamless'}
