= form_for @sector do |f|
  .row-fluid
    .span6
      = f.label :name
      = f.text_field :name, :class => 'span12 required'
      = f.label :abbreviation
      = f.text_field :abbreviation, :class => 'span12 required'
      %span.help-block (2-7 character short-form notation for sector)
      = f.label :apcd_id, 'APCD'
      = f.collection_select :apcd_id, Staff.all, :id, :name, {:include_blank => true}, :class => 'span12'
      %span.help-block APCD responsible for the sector
    .span6
      = f.label :photo
      = f.file_field :photo, :class => 'span12'
      - if @sector.photo?
        %label.checkbox
          = f.check_box :remove_photo
          Remove
      %span.help-block the photo will be used to visually identify this sector
      = image_tag(@sector.photo.golden791.url)
  .form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
