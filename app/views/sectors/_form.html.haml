= form_for @sector do |f|
  -if @sector.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sector.errors.count, "error")} prohibited this sector from being saved:"
      %ul
        - @sector.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :apcd_id
    = f.number_field :apcd_id
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
