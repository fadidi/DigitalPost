.container
  .row
    .span12
      .hero-unit.red
        %h1
          = @user.name
          %small= @user.email
  .row
    .span8
      .page-header
        %h1 Contact Info
      %dl
        %dt Name
        %dd= @user.name
        %dt Email
        %dd= @user.email
        %dt Phone
        %dd= @user.phone
      = raw(@user.bio)
    .span4
      - if @user.verified?
        .page-header
          %h1 Revisions
        %p #{@user.name} has made #{pluralize(@user.revisions.count, 'revision')} on the site.
        .page-header
          %h1 Roles
        %ul
          - for role in @user.roles do
            %li= role.name
      - else
        .hero-unit.blue
          %h1 This user is not verified.
