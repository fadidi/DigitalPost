- content_for :backtrack do
  %li.active= link_to raw("#{icon_for('timeline', Timeline.model_name.human(:count => :plural))}"), timelines_path

- content_for :top_right_menu do
  %li= link_to raw(action_icon(:create, t('phrase.new_resource', :resource => Timeline.model_name.human))), new_timeline_path if can? :create, Timeline

%table.table
  %tr
    %th Headline
    %th Media
    %th Startdate
    %th Text

  - @timelines.each do |timeline|
    %tr
      %td= link_to timeline.headline, timeline
      %td= timeline.asset_media
      %td= timeline.startdate
      %td= timeline.text
