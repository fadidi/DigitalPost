%ul.nav.nav-pills.pull-left
  %li.dropdown
    = link_to '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown' do
      %span.icon-home
      Home
      %b.caret
    %ul.dropdown-menu
      %li= link_to 'Front Page', root_path
      %li.divider
      %li= link_to 'Pages', pages_path
      - if can? :read, Unit
        %li.dropdown-submenu
          = link_to 'Admin Units', '#', :tabindex => '-1'
          %ul.dropdown-menu
            %li= link_to 'All Units', units_path
            %li.divider
            - for unit in Unit.all do
              %li= link_to unit.name, unit
      - if can? :read, User
        %li.dropdown-submenu
          = link_to 'People', '#', :tabindex => '-1'
          %ul.dropdown-menu
            %li= link_to 'Everyone', users_path
            %li= link_to 'Staff', staff_index_path if can? :read, Staff
            %li= link_to 'Volunteers', volunteers_path if can? :read, Volunteer
  = yield :backtrack
%ul.nav.nav-pills.pull-right
  = yield :top_right_menu
  = render 'menu' rescue nil
%ul#top-message.nav.nav-pills.pull-right
