= form_for @staff do |f|
  -if @staff.errors.any?
    #error_explanation
      %h2= "#{pluralize(@staff.errors.count, "error")} prohibited this staff from being saved:"
      %ul
        - @staff.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :job_description
    = f.text_area :job_description
  .actions
    = f.submit 'Save'
