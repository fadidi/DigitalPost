= form_for @region do |f|
  = render 'shared/form_errors', :item => @region if @region.errors.any?
  = render 'shared/form_info'
  .row-fluid
    .span6
      = f.label :name, 'Region Name'
      = f.text_field :name, :class => 'span12 required'
      = f.label :abbreviation, 'Region Abbreviation'
      = f.text_field :abbreviation, :class => 'span12 required'
      %span.help-block (2-7 character short-form notation for the region)
    .span6
      = f.label :photo
      = f.file_field :photo, :class => 'span12'
      - if @region.photo?
        %label.checkbox
          = f.check_box :remove_photo
          Remove
      %span.help-block the photo will be used to visually identify this unit
      = image_tag(@region.photo.golden791.url)
  .form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
