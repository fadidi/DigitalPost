= form_for @photo do |f|
  = render 'shared/form_errors', :item => @photo if @photo.errors.any?
  = render 'shared/form_info'
  .row-fluid
    .span6
      .row-fluid
        .span6
          = f.label :title
          = f.text_field :title, :class => 'span12'
        .span6
          = f.label :attribution
          = f.text_field :attribution, :class => 'span12'
      = f.label :description
      = f.text_area :description, :rows => 5, :class => 'span12'
    .span6
      = f.label :photo
      = f.file_field :photo, :class => 'span12 required'
  .form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
