= form_for @language do |f|
  = render 'shared/form_errors', :item => @language if @language.errors.any?
  = render 'shared/form_info'
  .row-fluid
    .span6
      = f.label :name
      = f.text_field :name, :class => 'span12 required'
      = f.label :code, 'Language Code/Abbreviation'
      = f.text_field :code, :class => 'span12 required'
      %span.help-block (two-letter code recommended; e.g. EN for English)
    .span6
      = f.label :description
      = f.text_area :description, :rows => 5, :class => 'span12'
  .form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
